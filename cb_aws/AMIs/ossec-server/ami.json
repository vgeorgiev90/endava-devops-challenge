{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-west-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
	     "name": "ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.medium",
      "ssh_username": "ubuntu",
      "ami_name": "security-ubuntu20-{{timestamp}}"
    }
  ],
    "provisioners": [
    {
      "user": "ubuntu",
      "playbook_file": "../shared/ossec-server.yml",
      "type": "ansible"
    },
    {
      "type": "inspec",
      "user": "ubuntu",
      "profile": "file://../generic/specs/linux-baseline",
      "extra_arguments": ["--chef-license=accept", "--sudo", "--no-distinct-exit"]
    },
    {
      "type": "inspec",
      "user": "ubuntu",
      "profile": "file://../generic/specs/ssh-baseline",
      "extra_arguments": ["--chef-license=accept", "--sudo", "--no-distinct-exit"]
    }
  ]
}
